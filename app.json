{
  "expo": {
    "name": "MyJantes",
    "slug": "myjantes",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myjantes",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F1B2D"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.myjantes.app",
      "infoPlist": {
        "NSCameraUsageDescription": "MyJantes a besoin de votre caméra pour prendre des photos de vos jantes.",
        "NSPhotoLibraryUsageDescription": "MyJantes a besoin d'accéder à votre galerie pour sélectionner des photos de vos jantes."
      }
    },
    "android": {
      "package": "com.myjantes.app",
      "adaptiveIcon": {
        "backgroundColor": "#0F1B2D",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "permissions": ["android.permission.CAMERA", "android.permission.READ_EXTERNAL_STORAGE"]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://replit.com/"
        }
      ],
      "expo-font",
      "expo-web-browser",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "MyJantes a besoin de votre caméra pour prendre des photos de vos jantes."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "MyJantes a besoin d'accéder à votre galerie pour sélectionner des photos de vos jantes."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
